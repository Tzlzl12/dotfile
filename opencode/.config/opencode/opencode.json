{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "ask",
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "write": "ask",
    "edit": "ask",
    "patch": "ask",
    "bash": "ask"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": false
    }
  },
  "provider": {
    "cerebras": {
      "npm": "@ai-sdk/cerebras",
      "name": "Cerebras",
      "options": {
        "apiKey": "{env:CEREBRAS_API_KEY}"
      },
      "models": {
        "gpt-oss-120b": {
          "name": "gpt-oss-120b",
          "id": "gpt-oss-120b"
        }
      }
    },
    "modelscope": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "ModelScope",
      "options": {
        "baseURL": "https://api-inference.modelscope.cn/v1",
        "apiKey": "{env:MODELSCOPE_API_KEY}"
      },
      "models": {
        "qwen-coder": {
          "name": "Qwen3-Coder-480B",
          "id": "Qwen/Qwen3-Coder-480B-A35B-Instruct"
        },
        "glm4.7": {
          "name": "GLM-4.7",
          "id": "ZhipuAI/GLM-4.7"
        },
        "glm4.7-flash": {
          "name": "GLM-4.7-Flash",
          "id": "ZhipuAI/GLM-4.7-Flash",
          "options": {
            "enable_thinking": false
          }
        },
        "deepseek": {
          "name": "DeepSeek",
          "id": "deepseek-ai/DeepSeek-V3.2"
        }
      }
    }
  }
}
